@model MoneyDinos.Models.ExactEntry

<h2>Edit Exact Entry</h2>

<form asp-action="ExactEntryEdit">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsExpense"></label>
        <input asp-for="IsExpense" class="form-control" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="TransactionId">Transaction ID</label>
        <input asp-for="TransactionId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Reason"></label>
        <input asp-for="Reason" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <form asp-action="DeleteExactEntry" method="post" class="mt-2">
        <input type="hidden" asp-for="TransactionId" />
        
    </form>

    <form asp-action="DeleteExactEntry" method="post" class="mt-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this entry?');">Delete</button>
    </form>

</form>

<a asp-action="ExactEntryList" class="btn btn-secondary">Back to List</a>