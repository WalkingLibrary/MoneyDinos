@model IEnumerable<MoneyDinos.Models.Income>


<h2>Monthly Income Report</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Is Recurring</th>
        <th>Recurrence Interval</th>
        <th>Notes</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var income in Model)
    {
        <tr>
            <td>@income.Date.ToString("yyyy-MM-dd")</td>
            <td>@income.Description</td>
            <td>@income.Amount.ToString("C")</td>
            <td>@income.Category.ToString()</td>
            <td>@(income.IsRecurring ? "Yes" : "No")</td>
            <td>@(income.IsRecurring ? income.RecurrenceInterval.ToString() : "N/A")</td>
            <td>@income.Notes</td>
        </tr>
    }
    </tbody>
</table>