@model MoneyDinos.Models.ReportViewModel

<h2>Projected Balance Report by Day</h2>

<h3>Balances</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Is Estimated?</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var balance in Model.Balances)
    {
        <tr>
            <td>@balance.Date.ToString("yyyy-MM-dd")</td>
            <td>@balance.Amount.ToString("C")</td>
            <td>@(balance.IsEstimated ? "Yes" : "No")</td>
        </tr>
    }
    </tbody>
</table>

<h3>Incomes</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Is Recurring?</th>
            <th>Recurrence Interval</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var income in Model.Incomes)
    {
        <tr>
            <td>@income.Date.ToString("yyyy-MM-dd")</td>
            <td>@income.Description</td>
            <td>@income.Amount.ToString("C")</td>
            <td>@income.Category.ToString()</td>
            <td>@(income.IsRecurring ? "Yes" : "No")</td>
            <td>@(income.IsRecurring ? income.RecurrenceInterval.ToString() : "N/A")</td>
            <td>@income.Notes</td>
        </tr>
    }
    </tbody>
</table>

<h3>Expenses</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Is Recurring?</th>
            <th>Recurrence Interval</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var expense in Model.Expenses)
    {
        <tr>
            <td>@expense.Date.ToString("yyyy-MM-dd")</td>
            <td>@expense.Description</td>
            <td>@expense.Amount.ToString("C")</td>
            <td>@expense.Category.ToString()</td>
            <td>@(expense.IsRecurring ? "Yes" : "No")</td>
            <td>@(expense.IsRecurring ? expense.RecurrenceInterval.ToString() : "N/A")</td>
            <td>@expense.Notes</td>
        </tr>
    }
    </tbody>
</table>
